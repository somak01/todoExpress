<%- include("./partials/__htmlhead.ejs") -%>
    <script src="/js/insertData.js" type="module"></script>
    <h1>Add a new activity</h1>

    <form id="addForm">
        <div class="form-group row">
            <div class="col">
                <label for="priority">Priority</label>
                <select class="form-control" name="priority">
                    <option id="1">1</option>
                    <option id="2">2</option>
                    <option id="3">3</option>
                    <option id="4">4</option>
                    <option id="5">5</option>
                </select>
            </div>
            <div class="col">
                <label for="date">Date:</label>
                <input type="date" name="date" value="2000-08-02" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label for="activity">Activity:</label>
                <input type="text" name="activity" class="form-control" placeholder="Running">
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label for="location">Location:</label>
                <input type="text" name="location" class="form-control" placeholder="Home">
            </div>
        </div>
        <button type="submit" class="btn btn-primary submit" id="submitButton">Submit</button>
    </form>

<%- include("./partials/__htmlfoot.ejs") -%>