<%- include("./partials/__htmlhead.ejs") -%>
    <script src="/js/editFormPop.js" type="module"></script>
    <h1>Delete or Modify</h1>
    <form>
        <div class="form-group row">
            <div class="col">
                <label for="activitySelect">Select an activity</label>
                <select name="activitySelect">
                    <% todo.forEach((todos) => {  %>
                        <option id="<%=todos._id%>"><%=todos.activity%>, <%=todos.location%>, <%=todos.priority%>, <%=todos.date.toDateString()%></option>
                    <% })%>
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <button class="btn btn-danger" id="deleteButton">Delete</button>
                <button class="btn btn-primary" id="editButton">Edit</button>
            </div>
        </div>
    </form>
    <form id="hiddenForm" style="display:none;">
        <div class="form-group row">
            <div class="col">
                <label for="priority">Priority</label>
                <select class="form-control" name="priority">
                    <option id="1">1</option>
                    <option id="2">2</option>
                    <option id="3">3</option>
                    <option id="4">4</option>
                    <option id="5">5</option>
                </select>
            </div>
            <div class="col">
                <label for="date">Date:</label>
                <input type="date" name="date" value="2000-08-02" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label for="activity">Activity:</label>
                <input type="text" name="activity" class="form-control" placeholder="Running">
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label for="location">Location:</label>
                <input type="text" name="location" class="form-control" placeholder="Home">
            </div>
        </div>
        <button type="submit" class="btn btn-primary submit" id="saveButton">Save</button>
    </form>
    

<%- include("./partials/__htmlfoot.ejs") -%>