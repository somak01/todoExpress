<%- include("./partials/__htmlhead.ejs") -%>
    <h1>Home Page</h1>   

    <form>
        <div class="form-group row">
            <div class="col">
                <label for="priority">Priority</label>
                <select class="form-control" name="priority">
                    <option id="0"></option>
                    <option id="1">1</option>
                    <option id="2">2</option>
                    <option id="3">3</option>
                    <option id="4">4</option>
                    <option id="5">5</option>
                </select>
            </div>
            <div class="col">
                <label for="date">Date:</label>
                <input type="date" name="date"  class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label for="activity">Activity:</label>
                <input type="text" name="activity" class="form-control">
            </div>
        </div>
        <div class="form-group row">
            <div class="col">
                <label for="location">Location:</label>
                <input type="text" name="location" class="form-control">
            </div>
        </div>
        <button class="btn btn-primary submit" id="searchButton">Search</button>
    </form>

    <ul class="list-group my-5">
        <% todo.forEach(todos => { %>
        <li class="list-group-item"><%= todos.activity %>, <%= todos.location %>, <%= todos.priority %>, <%= todos.date.toDateString() %></li>
        <% }) %>

    </ul>
    
    

<%- include("./partials/__htmlfoot.ejs") -%>